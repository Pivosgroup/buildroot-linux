#!/bin/sh

case "$1" in
	start)
		echo -n "Starting acpid: "
		start-stop-daemon -S -q -m -b -p /var/run/acpid.pid --exec /usr/sbin/acpid -- -n
		echo "done"
		;;
	stop)
		echo -n "Stopping acpid: "
		start-stop-daemon -K -q -p /var/run/acpid.pid
		echo "done"
		;;
	restart)
		"$0" stop
		sleep 1
		"$0" start
		;;
	*)
		echo "Usage: $0 {start|stop|restart}"
		;;
esac
